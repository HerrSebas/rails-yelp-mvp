<div class= "container">
  <div>
    <h1><%= @restaurant.name %></h1>
    <ul class = 'list-group'>
      <li class="list-group-item restaurant-name">Address: <%= @restaurant.address %></li>
      <li class="list-group-item restaurant-name">Phone number: <%= @restaurant.phone_number %></li>
      <li class="list-group-item restaurant-name">Category: <%= @restaurant.category %></li>
    </ul>

    <h1>Reviews</h1>
    <ul class = 'list-group'>
      <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= review.content %>
        <span class="badge bg-primary rounded-pill">
            <%= review.rating%>
        </span>
      </li>
      <% end %>
    </ul>
  </div>
  <br>

  <div class= "container">
  <h1><%= "Adding review to #{@restaurant.name}" %></h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <div class= "container d-flex justify-content-between">
      <%= f.submit "Create review", class: "btn btn-primary" %>
      <%= link_to 'Restaurants', restaurants_path, class:"btn btn-primary" %>
    </div>
  <% end %>
